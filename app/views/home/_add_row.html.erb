							<area shape="rect" coords="300,56,390,89" href="/requests/15" target="_blank" />

							<area shape="rect" coords="15,102,85,135" href="/requests/14" target="_blank" />
							<area shape="rect" coords="119,102,187,135" href="/requests/9" target="_blank" />
							<area shape="rect" coords="219,102,288,135" href="/requests/10" target="_blank" />
							<area shape="rect" coords="320,102,390,135" href="/requests/11" target="_blank" />

							<area shape="rect" coords="15,150,120,183" href="/requests/12" target="_blank" />
							<area shape="rect" coords="150,150,255,183" href="/requests/13" target="_blank" />
							<area shape="rect" coords="286,150,390,183" href="/requests" target="_blank" />
						</map>
					</div>
				</div>
				<div class="clearfix"></div>
			</div>
			<div class="line-two cl">
				<div class="item">
					<% topic = MpSet.where(cate: 3).last %>
					<%= link_to image_tag(topic.src), topic.link, class: 'thua', target: '_blank' %>
					<hr>
					<p><%= topic.title %></p>
				</div>
				<div class="item">
					<!-- <%# event = Event.totop.last %>
					<%#= link_to image_tag(event.logo.url(:thumb)), event_path(event), class: 'thua', target: '_blank' %>
					<hr>
					<p>漫拍活动： <%#= event.name %></p> -->
					<% request = MpSet.where(cate: 4).last %>
					<%= link_to image_tag(request.src), request.link, class: 'thua', target: '_blank' %>
					<hr>
					<p><%= request.title %></p>
				</div>
				<div class="item last">
					<span class="top-left-pos"></span>
					<div class="tip-text-left">
						<h4>关注摄影师</h4>
						<p>
							你关注的漫友太少，
							<br>
							关注一些活跃的摄影师吧！
						</p>
						<!-- <a href="javascript:void(0);" class="btn btn-warning btn-sm" style="margin-top:20px;">更换推荐</a> -->
					</div>
					<div class="tip-right-once">
						<% users = User.order("rand()").limit(8) %>
						<div class="userlineone userlineitem">
							<% users[0..3].each_with_index do |u, index| %>
								<div class="<%= 'last' if index.eql?(3) %>">
									<%= link_to image_tag(u.avatar.url(:small), alt: u.username), user_path(u), title: u.username %>
									<div class="tofolbg"></div>
									<%= lin_to_fol_j u.id %>
								</div>
							<% end %>
						</div>
						<div class="userlinetwo userlineitem">
							<% users[4..8].each_with_index do |u, index| %>
								<div class="<%= 'last' if index.eql?(3) %>">
									<%= link_to image_tag(u.avatar.url(:small), alt: u.username), user_path(u), title: u.username %>
									<div class="tofolbg"></div>
									<%= lin_to_fol_j u.id %>
								</div>
							<% end %>
						</div>
					</div>
				</div>
				<div class="clearfix"></div>
			</div>
			<div class="clearfix"></div>
		</div>
	</div>
</div>