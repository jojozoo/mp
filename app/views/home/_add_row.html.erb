<div class="row">
	<div class="col-md-12">
		<div class="mp-home-center-new">
			<div class="line-one cl">
				<div class="item">
					<% day = MpSet.where(cate: 1).last %>
					<%= link_to image_tag(day.src), day.link, class: 'thua', target: '_blank' %>
