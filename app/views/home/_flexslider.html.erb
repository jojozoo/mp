<div class="flexslider">
	<ul class="slides">
		<% Banner.all.each do |banner| %>
		<li>
			<% if banner.link.eql?('javascript:void(0);') %>
			<%= image_tag(banner.picture.url) %>
			<% else %>
			<%= link_to image_tag(banner.picture.url), banner.link, target: '_blank' %>
			<% end %>
			
		</li>
		<% end %>
		<!-- <%# Photo.choice.order("id desc").limit(5).each do |photo| %>
		<li>
			<%#= link_to image_tag(photo.picture(:large)), photo_path(photo), target: '_blank' %>
		</li>
		<%# end %> -->
	</ul>
</div>

<script type="text/javascript">
	$(function(){
		$('.flexslider').flexslider({
			animation: 'slide'
		});
	});
</script>