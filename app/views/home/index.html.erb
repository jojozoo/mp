<div class="row cz-home-all top-all" style="margin-top:30px;">
	<div class="col-md-9">
		<%= render 'flexslider' %>
	</div>
	<div class="col-md-3 mp-home-emphasis">
		<div class="em-title">
			每日重点
		</div>
		<ul>
			<% MpSet.where(cate_id: 0, cate: 5).order('updated_at desc').limit(14).each do |em| %>
			<li>
				<%= link_to truncate(em.title, length: 19), em.link, target: '_blank', title: em.title %>
			</li>
			<% end %>
		</ul>
		<div class="em-title" style="margin: 8px auto;">
			<a href="/topics/cate/104" target="_blank">摄影信息</a>
		</div>
		<ul>
			<% MpSet.where(cate_id: 0, cate: 8).order('updated_at desc').limit(5).each do |em| %>
			<li>
				<%= link_to truncate(em.title, length: 19), em.link, target: '_blank', title: em.title %>
			</li>
			<% end %>
		</ul>
	</div>
</div>
<!-- 编辑推荐作品 -->
<ul class="breadcrumb mp-ul-nav">
	<li>
		<span style="color:orange">
			<i class="icon-thumbs-up"></i>
			编辑推荐
		</span>
	</li>
</ul>
<div class="row cz-home-all recommends-all">
	<div class="col-md-6">
		<% day = MpSet.where(cate: 1).last %>
		<%= link_to day.link, class: 'thua', target: '_blank' do %>
			<%= image_tag(day.src) %>
			<div class="mp-overlay"></div>
			<div class="mp-gradient">
				<div class="nametxt"><%= day.title %></div>
			</div>
		<% end %>
	</div>
	<% [2, 3, 4, 7].each do |canub| %>
	<div class="col-md-3">
		<% obj = MpSet.where(cate: canub).last %>
		<%= link_to obj.link, class: 'thua', target: '_blank' do %>
			<%= image_tag(obj.src) %>
			<div class="mp-overlay"></div>
			<div class="mp-gradient">
				<div class="nametxt"><%= obj.title %></div>
			</div>
		<% end %>
	</div>
	<% end %>
</div>
<!-- 编辑推荐作品  end -->

<!-- 活动展示 -->
<ul class="breadcrumb mp-ul-nav">
	<li>
		<span style="color:orange">
			<i class="icon-flag"></i>
			漫拍活动
		</span>
	</li>
	<li>
		<%= link_to '更多...', events_path, target: '_blank' %>
	</li>
</ul>
<div class="row cz-home-all events-all">
	<% Event.totop.limit(4).each do |request| %>
	<div class="col-md-3">
		<%= link_to event_path(request) do %>
			<%= image_tag(request.logo.url(:thumb)) %>
			<div class="mp-overlay"></div>
			<div class="mp-gradient">
				<div class="nametxt"><%= request.name %></div>
			</div>
		<% end %>
	</div>
	<% end %>
</div>
<!-- 活动展示  end -->

<!-- 频道展示 -->
<ul class="breadcrumb mp-ul-nav">
	<li>
		<span style="color:orange">
			<i class="icon-flag"></i>
			漫拍频道
		</span>
	</li>
	<li>
		<%= link_to '更多...', events_path, target: '_blank' %>
