/*.events-all .col-md-3 a:hover .mp-gradient{
	opacity:1;
	-ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=100)";
	filter: alpha(opacity = 100);
	bottom:0px
}*/
.events-all .col-md-3 a .mp-overlay{
	position: absolute;
	top: 0;
	opacity: 0;
	filter: alpha(opacity=0);
	width: 100%;
	height: 100%;
	background-color: #000;
	text-align: center;
	transition: opacity 0.2s;
	-webkit-transition: opacity 0.2s;
	-ms-transition: opacity 0.2s;
	-moz-transition: opacity 0.2s;
	-o-transition: opacity 0.2s;
}
.events-all .col-md-3 a .mp-gradient{
	/*filter: alpha(opacity = 0);
	opacity: 0;*/
	bottom: 0;
	display: table;
	position: absolute;
	width: 100%;
	height: 56px;
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, rgba(0, 0, 0, 0)), color-stop(100%, rgba(0, 0, 0, 0.6)));
	background: -webkit-linear-gradient(top, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.6) 100%);
	background: -webkit-gradient(linear, left top, left bottom, from(rgba(0, 0, 0, 0)), to(rgba(0, 0, 0, 0.6)));
	background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.6) 100%);
	filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#00000000', endColorstr='#99000000', GradientType=0);
}
.events-all .col-md-3 a .mp-gradient .nametxt {
	position: relative;
	top: 8px;
	padding-left: 10px;
	font-size: 18px;
	color: #fff;
	font-weight: 300;
	text-shadow: 0 0 1px rgba(0, 0, 0, 0.6);
}
.events-all .col-md-3 a .mp-gradient .nametxt.namedesc{
	font-size: 12px;
}

.events-all, .recommends-all{
	margin-top: 30px;
}
.recommends-all > div{
	margin-top: 30px;
	text-align: center;
}
.recommends-all .col-md-6, .recommends-all .col-md-6 a img{
	height: 330px;
}
.recommends-all .col-md-6 a,.recommends-all .col-md-3 a{
	display: inline-block;
	width: 100%;
	background: #666;
}
.recommends-all .col-md-3{
	height: 150px;
}
.recommends-all a img{
	max-height: 100%;
}
</style>
<script type="text/javascript">
	$(function(){
		$(".cz-home-top, .background, .cz-home-content").css({height: $(window).height() - 70});
		var windowHeight = $(window).height() - 70;
		var p = 0,
			t = 0,
			timer;
		$(window).bind("scroll", function(event){
			var p = $(document).scrollTop();
			clearTimeout(timer);
			if(p <= (windowHeight + 70)){
				timer = setTimeout(function(){
						if(t < p){// 向下
							$("body, html").animate({scrollTop: windowHeight});
						} else {// 向上
							$("body, html").animate({scrollTop: 0});
						}
						t = p;
				}, 100);
			}
		});
	});
</script>
