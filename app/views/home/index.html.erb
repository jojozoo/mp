<!-- 活动展示 -->
<div class="row" style="margin-top:20px;">
	<div class="col-md-12">
		<div class="ad">
			<%= image_tag '/images/ads/ad1.png', alt: '作品征集' %>
		</div>
	</div>
</div>
<div class="row cz-home-all top-all">
	<div class="col-md-9">
		<%= render 'flexslider' %>
	</div>
	<div class="col-md-3 mp-home-emphasis">
		<div class="em-title">
			每日重点
		</div>
		<ul>
			<% MpSet.where(cate_id: 0, cate: 5).order('updated_at desc').limit(21).each do |em| %>
			<li>
				<%= link_to truncate(em.title, length: 19), em.link, target: '_blank', title: em.title %>
			</li>
			<% end %>
		</ul>
	</div>
</div>
<div class="row cz-home-all events-all">
	<% { people: '人文', landscapes: '风光', architecture: '建筑', animals: '动物', riding: '骑行', hiking: '徒步', car: '自驾', trips: '旅游' }.each do |k, v| %>
	<div class="col-md-3">
		<%= link_to events_path(tag: v) do %>
			<%= image_tag("/images/tags/#{k}.jpg?v=2") %>
			<div class="mp-overlay"></div>
			<div class="mp-gradient">
				<div class="nametxt"><%= v %></div>
			</div>
		<% end %>
	</div>
	<% end %>
</div>
<!-- 活动展示  end -->
