<div class="item-line">
	<p>
		<%= link_to photo.user.username, user_path(photo.user_id) %> 上传于 <%= photo.created_at.to_s(:db) %>  查看 (<%= photo.visit_count %>)   评论 (<%= photo.coms_count %>)   喜欢(<%= photo.liks_count %>)   收藏(<%= photo.stos_count %>)
		<% if current_user.try(:id).eql?(photo.user_id) %>
		<span class="pull-right editor_opt">
			<a class="opt" href="javascript:void(0);">作品修改</a>
			<a class="opt" href="javascript:void(0);">继续上传</a>
		</span>
		<% end %>
	</p>
	<p>
		<%= link_to image_tag(photo.picture.url(:large)), photo_path(photo, sid: photo.user_id), title: '点击查看详细内容' %>
	</p>
	<p>
		<%= photo.title.blank? ? '未填写标题' : photo.title %>
		<% if photo.isgroup %>
		<span style="color:red;">组图</span>
		<% end %>
		<span class="pull-right editor_opt">
			<% if current_user %>
				<% if current_user.admin or Editor.exists?(event_id: photo.event_id, editor_id: current_user.id) %>
					<% if photo.recommend %>
					<a href="/ajax/rec/photo/<%= photo.id %>" class="mp-ajax-tui active" data-type="rec">
						取消精选
					</a>
					<% else %>
					<a href="/ajax/rec/photo/<%= photo.id %>" class="mp-ajax-tui" data-type="rec">
						推荐精选
					</a>
					<% end %>
				<% end %>
				<% if current_user.admin %>
					<% if photo.choice %>
					<a href="/ajax/cho/photo/<%= photo.id %>" class="mp-ajax-tui active" data-type="cho">
						取消每日一图
					</a>
					<% else %>
					<a href="/ajax/cho/photo/<%= photo.id %>" class="mp-ajax-tui" data-type="cho">
						每日一图
					</a>
					<% end %>
				<% end %>
			<% end %>
			<a href="/ajax/lik/photo/<%= photo.id %>", class="mp-ajax-tui <%= 'active' if current_user and photo.liks?(current_user) %>", data-type="lik">
				喜欢(<span class="count"><%= photo.liks_count %></span>)
			</a>
			<a href="/ajax/sto/photo/<%= photo.id %>", class="mp-ajax-tui <%= 'active' if current_user and photo.stos?(current_user) %>", data-type="sto">
				收藏(<span class="count"><%= photo.stos_count %></span>)
			</a>
			<% if current_user and (current_user.admin or current_user.id.eql?(photo.user_id)) %>
			<%= link_to '查看原图', photo.picture.url, target: '_blank' %>
			<a href="javascript:void(0);">
				删除
			</a>
			<% end %>
		</span>
	</p>
	<div class="clearfix"></div>
	<hr>
</div>