<div class="mp-photo">
    <div class="types">
        <% if photo.isgroup and photo.parent_id.nil? %>
        <a class="type-group">组</a>
        <% end %>
        <% if photo.recommend and params[:order] != 'push' and !photo.choice %>
        <a class="type-push">荐</a>
        <% end %>
        <% if photo.choice and params[:order] != 'choice' %>
        <a class="type-choice">精</a>
        <% end %>
    </div>
    <div class="buttons">
        <div class="shares">
            <a class="action share weibo"></a>
            <a class="action share qzone"></a>
            <a class="action share renren"></a>
            <a class="action share douban"></a>
        </div>
        <% if sign_in? %>
        <div class="states">
            <a class="action state like">
                <span class="iconheart"></span>
                <span class="count"><%= photo.liks_count %></span>
            </a>
            <a class="action state star">
                <span class="iconstar"></span>
                <span class="count"><%= photo.stos_count %></span>
            </a>
        </div>
        <% end %>
    </div>
    <%= link_to_photo photo %>
    <div class="details">
        <div class="inside-left">
            <div class="account">
                <!-- 如果有活动ID 就不应该显示活动了 -->
                <%= link_to photo.title.present? ? photo.title : '标题', photo_path(photo) %>
            </div>
            <div class="title">
                <%= link_to photo.user.username, user_path(photo.user_id) %>
            </div>
        </div>
        <div class="inside-right">
            <!-- <a href="">编辑推荐</a>
            <br>
            <a href="">每日精选</a> -->
        </div>
    </div>
</div>