<style>
    .media{
        background: #f5f5f5;
        margin: 4px 0; padding:10px;
    }
    .unread{
        background: #fffced;
    }
</style>
<% @talks.each do |talk| %>
<div class="media <%= 'unread' if talk.unread? %>">
    <%= link_to image_tag('/images/avatar.jpg', class: 'avatar img-circle'), users_path(talk.sender_id), class: 'pull-left' %>
    <div class="media-body">
        <h5 class="media-heading">
            <a href="/qrfwwuw5pq/" class="author">朱晓武</a>
        </h5>
        <div style="font-size:12px;">
            <%= talk.text + '-----' + talk.id.to_s %>
        </div>
    </div>
</div>
<% end %>
<%= will_paginate @talks %>