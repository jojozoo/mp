<style type="text/css">
.media-body{
	width: 500px;
	border: 1px solid #ccc;
	padding: 10px;
}
.del, .del:hover{
	font-size: 12px;
    color: #999;
    text-decoration: none;
}
</style>
<ul class="media-list">
	<% @msgs.each do |msg| %>
	<li class="media">
		<%= link_to image_tag('/images/avatar.jpg', class: 'avatar img-circle'), user_path(msg.user_id), class: "pull-#{@current_user.id.eql?(msg.user_id) ? 'left' : 'right'}" %>
		<div class="media-body pull-<%= @current_user.id.eql?(msg.user_id) ? 'left' : 'right' %>">
			<div class="media-heading">
				<%= link_to msg.user.username, user_path(msg.user_id) %>
				<%= msg.created_at.strftime("%m-%d %H:%M") %>
				<%= link_to '删除', my_msg_path(@talk.id, mid: msg.id), method: :delete, class: 'del' %>
			</div>
			<div class="text">
				<%= msg.text %>
			</div>
		</div>
	</li>
	<% end %>
</ul>