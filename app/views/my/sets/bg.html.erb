<div class="row">
	<% Sbg.bgs.each do |bg| %>
		<div class="col-sm-6 col-md-2">
			<div class="thumbnail">
				<a href="javascript:void(0);" class="choose-bg">
					<%= image_tag bg.photo.url, class: 'img-rounded' %>
					<span class="choose-ok">
						<i class="icon-ok"></i>
					</span>
				</a>
			</div>
		</div>
	<% end %>
</div>
<style type="text/css">
.choose-bg{
	display: block;
	position: relative;
}
.choose-ok{
	position: absolute;
	right: 0;
	bottom: -4px;
	display: none;
	color: #000;
}
</style>
<script type="text/javascript">
$(function(){
	$(".choose-bg").on('click', function(){
		$('.choose-ok').hide();
		$(this).find('span').show();
		$('body').css('background', 'transparent url(' + $(this).find('img').attr('src') + ')');
	})
})
</script>
