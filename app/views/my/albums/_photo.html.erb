<div class="col-sm-6 col-md-3">
    <div class="thumbnail">
        <%= check_box_tag 'image', photo.id, false, class: "checkbox-image hide-cap" %>
        <a href="javascript:void(0);" class="checkbox-layer"></a>
        <%= link_to image_tag(photo.picture(:cover)), photo_path(photo, album_id: photo.album_id) %>
        <div class="caption caption-border">
            <span>
                <%= humanize photo.created_at %>
            </span>
            <div class="js-image-desc-edit" title="点击进行编辑"><%= photo.desc %></div>
            <textarea tid="<%= photo.id %>" class="once-desc js-image-desc-edit-textarea" placeholder="输入图片描述"><%= photo.desc %></textarea>
            <div>
                <%= link_to '封面', cover_my_album_path(photo.album_id, photo.id), class: 'js-album-cover' %>
                <%= link_to '删除', "javascript:void(0);", class: 'js-image-remove', data: {confirm: '确定删除？不可恢复操作!' }, tid: photo.id %>
                <div class="pull-right">
                    <%= link_to '大', photo.picture.url(:large), target: '_blank' %>
                    <%= link_to '小', photo.picture.url(:small), target: '_blank' %>
                    <%= link_to '原', photo.picture.url(:original), target: '_blank' %>
                    <%= link_to '封', photo.picture.url(:cover), target: '_blank' %>
                </div>
            </div>
        </div>
    </div>
</div>