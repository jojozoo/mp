<div class="col-sm-6 col-md-3">
    <div class="thumbnail">
        <%= check_box_tag 'image', image.id, false, class: "checkbox-image hide-cap" %>
        <a href="javascript:void(0);" class="checkbox-layer"></a>
        <%= link_to image_tag(image.picture(:cover)), photo_path(image) %>
        <div class="caption caption-border">
            <span>
                <%= humanize image.created_at %>
            </span>
            <div class="js-image-desc-edit" title="点击进行编辑"><%= image.desc %></div>
            <textarea tid="<%= image.id %>" class="once-desc js-image-desc-edit-textarea" placeholder="输入图片描述"><%= image.desc %></textarea>
            <div>
                <%= link_to '封面', cover_my_album_path(image.album_id, image.id), class: 'js-album-cover' %>
                <%= link_to '删除', "javascript:void(0);", class: 'js-image-remove', data: {confirm: '确定删除？不可恢复操作!' }, tid: image.id %>
                <div class="pull-right">
                    <%= link_to '大', image.picture(:big), target: '_blank' %>
                    <%= link_to '小', image.picture(:small), target: '_blank' %>
                    <%= link_to '原', image.picture(:original), target: '_blank' %>
                    <%= link_to '封', image.picture(:cover), target: '_blank' %>
                </div>
            </div>
        </div>
    </div>
</div>