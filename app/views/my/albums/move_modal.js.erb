$("<%= j render 'move_modal' %>").appendTo("body").modal('show').on('shown.bs.modal', function(){
	var _modal = this;
	$(this).find('.thumbnail').on('click', function(){
		$(this).parents('.modal-body').find('.ischoosealbum').hide();
		$(this).find('.ischoosealbum').show();
		$('#move-album_id').val($(this).attr('album-id'));
	});
	$(this).find('#move-submit').on('click', function(){
		if(!$(this).parent().find('#move-album_id').val()){
			$(".move-album-error").text("请选择相册").show();
			return false;
		}
	})
}).on('hidden.bs.modal', function(){
	$(this).off().remove();
});