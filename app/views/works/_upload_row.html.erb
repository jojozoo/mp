<div class="col-sm-6 col-md-3">
	<div class="thumbnail">
		<a href="javascript:void(0);" class="bk-img">
			<%= image_tag image.picture(:cover) %>
		</a>
		<%= link_to '设为封面', "javascript:void(0);", class: 'btn btn-primary btn-xs js-image-cover', tid: image.id %>
		<%= link_to '删除本张', "javascript:void(0);", class: 'btn btn-danger btn-xs js-image-remove', tid: image.id %>
		<div class="caption caption-border">
			<textarea class="once-desc" placeholder="输入图片描述" name="desc[<%= image.id %>]"></textarea>
			<span>上传时间：<%= image.created_at.to_s(:db) %></span>
		</div>
	</div>
</div>