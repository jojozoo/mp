            <div class="row" style="height:200px;margin-bottom:20px;">
                <div class="col-md-8" style="border-right: 1px solid #F8F8F8;">
                    <h3>
                        <%= @work.title %>
                        <small><%= @work.images_count %>张照片</small>
                    </h3>
