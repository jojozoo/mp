                    </div>
                    <p>
                        浏览: 30
                        <br> 
                        时间: <%= humanize(@work.updated_at) %>
                    </p>
                </div>
            </div>
        </div>
        <!-- 图片 -->
        <script src="/javascripts/image.js?v=<%= Time.now.to_i %>" type="text/javascript"></script>
        <% @work.images.each do |image| %>
