<!-- 实例化编辑器 -->
<script type="text/javascript">
	var ue = UE.getEditor('ueditorID', {initialFrameWidth:'100%', initialFrameHeight: 500});
	$(function(){
		$("input[type=submit]").click(function(){
			if(ue.hasContents()){
				$("#topic_content").text(ue.getContent());
			} else {
				MPMSG('error', '内容不能为空');
				$(this).blur();
				return false;
			}
		})
	})
</script>

