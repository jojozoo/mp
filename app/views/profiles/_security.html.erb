<div class="pager">
	<div class="panel-group" id="accordion">
		<!--修改密码-->
		<div class="panel panel-default">
			<div class="panel-heading">
				<a data-toggle="collapse" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
					<h4 class="panel-title">修改密码</h4>
				</a>
			</div>
			<div id="collapseOne" class="panel-collapse collapse in">
				<div class="panel-body">
					<form class='form-horizontal'>
						<div class="form-group password optional user_password">
							<label class="password optional col-sm-2 control-label" for="user_password">当前密码</label>
							<div class="col-sm-6 input-text-add">
								<input class="string password optional form-control form-control" id="user_password" name="user[password]" size="50" type="password" data-validate="true">
							</div>
						</div>
						<div class="form-group password optional user_password1">
							<label class="password1 optional col-sm-2 control-label" for="user_password1">新密码</label>
							<div class="col-sm-6 input-text-add">
								<input class="string password1 optional form-control form-control" id="user_password1" name="user[password1]" size="50" type="password1" data-validate="true">
							</div>
						</div>
						<div class="form-group password optional user_password2">
							<label class="password2 optional col-sm-2 control-label" for="user_password2">确认密码</label>
							<div class="col-sm-6 input-text-add">
								<input class="string password2 optional form-control form-control" id="user_password2" name="user[password2]" size="50" type="password2" data-validate="true">
							</div>
						</div>
						<div class="form-group">
							<input class="btn btn-default col-sm-offset-7" name="commit" type="submit" value="修改密码">
						</div>
					</form>
				</div>
			</div>
		</div>
		<!--修改邮箱-->
		<div class="panel panel-default">
			<div class="panel-heading">
				<a data-toggle="collapse" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">
					<h4 class="panel-title">修改邮箱</h4>
				</a>
			</div>
			<div id="collapseTwo" class="panel-collapse collapse">
				<div class="panel-body">
					<form class='form-horizontal'>
						<div class="form-group password optional user_password">
							<label class="password optional col-sm-2 control-label" for="user_password">当前邮箱</label>
							<div class="col-sm-6 input-text-add">
								<input class="string password optional form-control form-control" id="user_password" name="user[password]" size="50" type="password" data-validate="true">
							</div>
						</div>
						<div class="form-group password optional user_password1">
							<label class="password1 optional col-sm-2 control-label" for="user_password1">登录密码</label>
							<div class="col-sm-6 input-text-add">
								<input class="string password1 optional form-control form-control" id="user_password1" name="user[password1]" size="50" type="password1" data-validate="true">
							</div>
						</div>
						<div class="form-group password optional user_password2">
							<label class="password2 optional col-sm-2 control-label" for="user_password2">新邮箱</label>
							<div class="col-sm-6 input-text-add">
								<input class="string password2 optional form-control form-control" id="user_password2" name="user[password2]" size="50" type="password2" data-validate="true">
							</div>
						</div>
						<div class="form-group">
							<input class="btn btn-default col-sm-offset-7" name="commit" type="submit" value="修改邮箱">
						</div>
					</form>
				</div>
			</div>
		</div>
		
	</div>
</div>