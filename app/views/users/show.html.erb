                </li>
                <li class="W_no_border">
                    <a href="javascript:void(0);"> 
                        <strong>69</strong>
                        <span>喜欢</span>
                    </a>
                </li>
            </ul>
        </div>
        <div class="profile-header-right" style="margin-bottom:10px;">
            <h3 class="pf_name">
                <%= @user.username %>
                <small class="pf-url"><%= link_to user_url(@user.id), user_path(@user.id) %></small>
            </h3>
            <div class="pf_resume">
                <%= @user.resume %>
            </div>
            <div class="pf_tags">
                <%= @user.addr %>
            </div>
            <div class="pf_do">
                <a href="" class="btn btn-default btn-xs">
