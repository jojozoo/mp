<div class="col-sm-6 col-md-3">
    <div class="thumbnail">
        <div class="actions fade-row">
            <a href="javascript:void(0);" class="btn btn-success btn-xs"> 
                <i class="icon-thumbs-up"></i>
                点赞
            </a>
            <a href="javascript:void(0);" class="btn btn-success btn-xs"> 
                <i class="icon-heart"></i>
                喜欢
            </a>
            <a href="javascript:void(0);" class="btn btn-success btn-xs">
                <i class="icon-pushpin"></i>
                收藏
            </a>
            <a href="javascript:void(0);" class="btn btn-success btn-xs">
                <i class="icon-ok-circle"></i>
                推荐
            </a>
        </div>
        <%= link_to image_tag(image.picture.url(:thumb)), image_path(image), style: 'display:block', target: '_blank' %>
        <div class="caption">
            <div>苹果电脑30年产品收藏视频展示苹果电脑30年产</div>
            <span class="push-thumbs-up">赞(8)</span>
            <span class="push-heart">喜欢(12)</span>
            <span class="push-pushpin">收藏(0)</span>
            <span class="push-ok-circle">推荐(198)</span>
            <hr>
            <div class="media">
                <%= link_to image_tag(image.user.avatar(:s50), class: 'img-circle avatar-mini'), user_path(image.user_id), class: 'pull-left' %>
                <div class="media-body">
                    <div class="media-heading">
                        <div>
                            <%= link_to image.user.username, user_path(image.user_id) %>
                            <span>(20)</span>
                            <%= link_to '关注', 'javascript:void(0)', class: 'follow' %>
                            <div class="pull-right">
                                <a href="javascript:void(0);" class="reply pull-right">评论</a>
                            </div>
                        </div>
                        <span class="date"><%= humanize image.created_at %></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>