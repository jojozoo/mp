<div class="row">
	<style type="text/css">
	.main .col-md-9 .breadcrumb, .main .col-md-12 .breadcrumb{
		margin-bottom: 15px;
	}
	.ad > img{
		width: 100%;
	}
	</style>
	<div class="col-md-9">
		<div class="ad">
			<img src="/images/ad.jpg" alt="我的十大手机图片征集">
		</div>

		<%= render 'shared/flexslider' %>

		<div class="row">
			<% Push.where(channel: '编辑推荐').order('id desc').limit(3).map(&:source).each do |image| %>
			<div class="col-md-4">
				<div class="thumbnail">
					<%= link_to image_tag(image.picture(:cover)), image_path(image), style: 'display:block', target: '_blank' %>
					<div class="caption">
						<%= link_to "##{image.event.name}#", event_path(image.event_id) %>
						<br>
						<%= link_to '更多活动>>', events_path %>
					</div>
				</div>
			</div>
			<% end %>
		</div>
	</div>
	<div class="col-md-3">
		<div class="breadcrumb">
			<span>每日重点</span>
		</div>
		<div class="radbox">
			<div class="box_con">
				<ul class="list-unstyled">
					<% Push.where(channel: '推荐重点').order('id desc').limit(12).each do |push| %>
						<% topic = push.source %>
						<li>
							<%= link_to topic.title, topic_path(topic.id) %>
						</li>
					<% end %>
				</ul>
			</div>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<div class="breadcrumb">
			<span>全部活动</span>
			<div class="pull-right">
				<%= link_to '年度活动', events_path(tag: '年度活动') %>
				<%= link_to '正在进行的活动', events_path(t: 'ongoing') %>
				<%= link_to '已结束的活动', events_path(t: 'closed') %>
				<%= link_to '浏览更多快拍活动>>', events_path %>
			</div>
		</div>
		<div class="event-tags">
			<% Push.where(channel: '推荐活动').order('id desc').limit(18).each do |push| %>
			<% event = push.source %>
			<%= link_to event.name, event_path(event.id), class: 'tag' %>
			<% end %>
		</div>	
	</div>
</div>
<div class="row">
	<div class="col-md-9">
		<div class="breadcrumb">
			<span>特别推荐</span>
		</div>
	</div>
	<div class="col-md-3">
		<div class="breadcrumb">
			<span>推荐摄影师</span>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<div class="breadcrumb">
			<span>最新上传</span>
			<div class="pull-right">
				<%= link_to '每日一图', images_path(o: 'tui') %>
				<%= link_to '漫拍之星', star_images_path %>
				<%= link_to '浏览更多>>', images_path %>
			</div>
		</div>
		<div class="row">
		<%= render partial: 'images/thumb', collection: Image.where(state: 1).order('id desc').limit(12), as: :image %>
		</div>
	</div>
</div>