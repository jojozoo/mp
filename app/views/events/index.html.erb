<ul class="breadcrumb second-nav">
	<li>
		<a href="/e" class="">
			全部活动
		</a>
	</li>
	<li>
		<a href="/e" class="">
			同城活动
		</a>
	</li>
	<li>
		<a href="/e" class="">
			正在进行的活动
		</a>
	</li>
	<li>
		<a href="/e" class="">
			已结束的活动
		</a>
	</li>
	<%= link_to new_event_path, class: 'btn btn-xs btn-success pull-right', style: 'margin-right: -10px;' do %>
		<i class="icon-flag"></i>
		发起活动
	<% end %>
</ul>
<div class="row">
	<% @events.each do |event| %>
		<div class="col-sm-6 col-md-3">
			<div class="thumbnail">
				<%= link_to image_tag(event.logo.url), event_path(event), target: '_blank' %>
				<div class="caption">
					<%= link_to event_path(event), target: '_blank' do %>
						<h5>#<%= event.title %>#</h5>
					<% end %>
					<p>
						<%= truncate(event.desc, length: 50) %>
					</p>
					<span>人数/图片:<%= 0 %>/190</span>
					<span>结束时间:<%= event.end_time %></span>
				</div>
			</div>
		</div>
	<% end %>
</div>
<%= will_paginate @events %>