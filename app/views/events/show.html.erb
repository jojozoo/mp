<div class="row">
	<div class="col-md-12">
		<div class="page-header">
			<h4>
				<%= @event.title %>
				<small>
					<a class="text-success"><%= @event.photos_count %></a>张图片&nbsp;&nbsp;
					<a class="text-success"><%= @event.members_count %></a>人参加
				</small>
				<%= link_to '上传到本活动', new_photo_path(request_id: @event.id), class: 'btn btn-success btn-sm pull-right mp-sign', style: 'margin-top:-4px;' %>
			</h4>
		</div>
		<div class="mp-page">
			<div class="media">
				<div class="media-object pull-left">
					<%= image_tag @event.logo(:big) %>
				</div>
				<div class="media-body">
					<h4 class="media-heading">活动公告
						<small>活动里的推荐</small>
					</h4>
					<hr>
					<ul>
						<% Emphasis.where(cate: @event.id).each do |em| %>
						<li>
							<%= link_to em.title, em.link, target: '_blank' %>
						</li>
						<% end %>
					</ul>
				</div>
			</div>
			<div class="event-content gray-desc">
				<%= sanitize @event.desc %>
			</div>
		</div>
		<style type="text/css">
		.breadcrumb {margin-bottom: 10px;}
		.breadcrumb a{
			text-decoration: none;
		}
		.breadcrumb a.activity{
			color: #999;
		}
		.breadcrumb .pull-right a{
			font-size: 20px;
		}
		.line-photos .item-line hr{
			margin: 10px auto 30px auto;
		}
		</style>
		<ul class="breadcrumb">
			<% {
				'news' => '最新上传',
				'choice' => '精选图片',
				'vist' => '人气最高',
				'coms' => '评论最多',
				'myse' => '只看自己',
				'comments' => '留言'
			}.each do |key, val|%>
			<li>
				<%= link_to val, event_path(@event.id, order: key), class: params[:order].eql?(key) ? 'activity' : '' %>
			</li>
			<% end %>
			<div class="pull-right">
				<%= link_to event_path(style: :line, order: params[:order]), class: params[:style].eql?('line') ? 'activity' : '' do %>
					<span class="icon-align-justify"></span>
				<% end %>
				<%= link_to event_path(style: :cols, order: params[:order]), class: params[:style].eql?('cols') ? 'activity' : '' do %>
					<span class="icon-th"></span>
				<% end %>
			</div>
		</ul>
		<script type="text/javascript" src="/javascripts/photos.js?v=<%= Time.now.to_i %>"></script>
		<% if params[:style].eql?('line') %>
		<div class="row line-photos">
			<div class="col-md-12" id="mp-photos">
				<div id="page_loading" page="1" state="static" url="<%= waterfall_photos_path(request_id: @event.id, order: params[:order] || 'push', style: params[:style]) %>">
					<img src="/images/loading.gif">
					<span>加载中...</span>
				</div>
			</div>
		</div>
		<% else %>
		<div class="row mp-photos" id="mp-photos">
			<div id="page_loading" page="1" state="static" url="<%= waterfall_photos_path(request_id: @event.id, order: params[:order] || 'push', style: params[:style]) %>">
				<img src="/images/loading.gif">
				<span>加载中...</span>
			</div>
		</div>
		<% end %>
	</div>
</div>