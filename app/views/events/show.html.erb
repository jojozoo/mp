<div class="row">
	<div class="col-md-12">
		<div class="white-col-md">
			<div class="row">
				<div class="col-md-12">
					<div class="page-header">
						<h4>
							<%= @event.title %>
							<small>
								<a class="text-success"><%= @event.images_count %></a>张图片&nbsp;&nbsp;
								<a class="text-success"><%= @event.members_count %></a>人参加
							</small>
							<%= link_to '上传到本活动', new_work_path(eid: @event.id), class: 'btn btn-success btn-sm pull-right', style: 'margin-top:-4px;' %>
						</h4>
					</div>
					<div class="mp-page">
						<div class="media">
							<div class="media-object pull-left">
								<%= image_tag @event.logo(:big) %>
							</div>
							<div class="media-body">
								<h4 class="media-heading">活动公告
									<small>活动里的推荐</small>
								</h4>
								<hr>
								<ul>
									<% 5.times do %>
									<li>
										<a href="">活动里的推荐</a>
									</li>
									<% end %>
								</ul>
							</div>
						</div>
						<div class="event-content gray-desc">
							<%= sanitize @event.desc %>
						</div>
					</div>

					<ul class="breadcrumb" style="margin-bottom: 10px;">
						<a href="javascript:void(0);" style="color:#999;">
						<% {
							'news' => '最新上传',
							'vist' => '人气最高',
							'coms' => '评论最多',
							'myse' => '只看自己'
						}.each do |key, val|%>
						<li>
							<% if params[:order].eql?(key) %>
							<%= link_to val, 'javascript:void(0);', style: 'color: #999;' %>
							<% else %>
							<%= link_to val, event_path(@event.id, order: key) %>
							<% end %>
						</li>
						<% end %>
					</ul>
					<div class="row">
						<% @images.each do |image| %>
							<div class="col-sm-6 col-md-3">
								<div class="thumbnail">
									<%= link_to image_tag(image.picture(:thumb)), image_path(image.id), target: '_blank' %>
									<div class="caption caption-border">
										<div style="margin: 6px 0;">
											<%= image.desc.present? ? image.desc : "暂无描述" %>
										</div>
										<span>上传时间:<%= humanize image.created_at %></span>
										<!-- <span class="pull-right" style="color: red;">组图(10)张</span> -->
									</div>
								</div>
							</div>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
