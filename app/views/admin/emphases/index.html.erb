<div class="w-box">
	<div class="w-box-header">
		<div class="pull-right sort-disabled">
			<%= link_to '新建em', new_admin_emphase_path %>
		</div>
	</div>
	<div class="w-box-content">
		<table class="table table-striped table12 table-condensed table-hover text-center">
			<tr>
				<th>标题</th>
				<th>链接</th>
				<th>时间</th>
				<th>操作</th>
			</tr>
		<% @ems.each do |em| %>
			<tr>
				<td><%= link_to em.title, em.link, target: '_blank' %></td>
				<td><%= truncate(em.link, length: 10) %></td>
				<td><%= em.created_at.to_date %></td>
				<td>
					<%= link_to '详细/编辑', edit_admin_emphase_path(em), class: 'btn btn-info btn-xs' %>
					<%= link_to '删除', admin_emphase_path(em), method: :delete, data: {confirm: '确定删除？不可恢复操作!' }, class: 'btn btn-danger btn-xs' %>
				</td>
			</tr>
		<% end %>
		</table>
	</div>
	<%= will_paginate @ems %>
</div>