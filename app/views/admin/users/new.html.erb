<%= simple_form_for ['admin', User.new], validate: true do |f| %>
	<%= f.input :avatar %>
	<%= f.input :username %>
	<%= f.input :email %>
	<%= f.input :mobile %>
	<%= f.input :password, as: :hidden, input_html:{value: 'work123'} %>
	<%= f.input :password_confirmation, as: :hidden, input_html:{value: 'work123'} %>
	<%= f.submit '保存', class: 'btn btn-default col-sm-offset-7' %>
<% end %>