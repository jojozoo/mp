<div class="w-box">
	<div class="w-box-header">
		<div class="pull-right sort-disabled">
			<input name="name" class="input-medium form-control" placeholder="搜索" type="text">
		</div>
	</div>
	<div class="w-box-content">
		<table class="table table-striped table12 table-condensed table-hover text-center">
			<tr>
				<th>账号</th>
				<th>姓名</th>
				<th>邮箱</th>
				<th>标题</th>
				<th>内容</th>
				<th>时间</th>
				<th>操作</th>
			</tr>
		<% @fbs.each do |fb| %>
			<tr>
				<td><%= link_to fb.user_id ? '用户' : '未关联', fb.user_id ? user_path(fb.user_id) : 'javascript:void(0);' %></td>
				<td><%= fb.name %></td>
				<td><%= fb.email %></td>
				<td><%= truncate(fb.subject, length: 10) %></td>
				<td><%= truncate(fb.desc, length: 10) %></td>
				<td><%= fb.created_at.to_date %></td>
				<td>
					<%= link_to '详细/回应', admin_feedback_path(fb), class: 'btn btn-info btn-xs' %>
					<%= link_to '删除', 'javascript:void(0);', class: 'btn btn-danger btn-xs' %>
				</td>
			</tr>
		<% end %>
		</table>
	</div>
	<%= will_paginate @fbs %>
</div>