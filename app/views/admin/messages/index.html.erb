<div class="w-box">
	<div class="w-box-header">
		<div class="pull-right sort-disabled">
			<div class="pull-right sort-disabled">
				<input name="name" class="input-medium form-control" placeholder="搜索" type="text">
			</div>
		</div>
	</div>
	<div class="w-box-content">
		<table class="table table-striped table12 table-condensed table-hover text-center">
			<tr>
				<th>发件人</th>
				<th>收件人</th>
				<th>会话数量</th>
				<th>操作</th>
			</tr>
		<% @messages.each do |message| %>
			<tr>
				<td><%= link_to message.sender.username, admin_user_path(message.sender_id) %></td>
				<td>
					<%= link_to message.user.username, admin_user_path(message.user_id) %>
				</td>
				<td><%= message.inners.count %></td>
				<td>
					<%= link_to '删除', admin_message_path(message.talk), class: 'btn btn-info btn-xs' %>
				</td>
			</tr>
		<% end %>
		</table>
	</div>
	<%= will_paginate @messages %>
</div>