<link type="text/css" href="/fb/jquery.fancybox.css?v=<%= Time.now.to_i %>" media="screen">
<link type="text/css" href="/fb/jquery.fancybox-thumbs.css?v=<%= Time.now.to_i %>">
<script type="text/javascript" src="/fb/jquery.mousewheel-3.0.6.pack.js"></script>
<script type="text/javascript" src="/fb/jquery.fancybox.js?v=<%= Time.now.to_i %>"></script>
<script type="text/javascript" src="/fb/jquery.fancybox-thumbs.js?v=<%= Time.now.to_i %>"></script>
<script type="text/javascript">
$(function(){
	$('.col-md-2 .thumbnail a').fancybox({
		prevEffect : 'none',
		nextEffect : 'none',

		closeBtn  : false,
		arrows    : false,
		nextClick : true,

		helpers : {
			thumbs : {
				width  : 50,
				height : 50
			}
		}
	});
});
</script>
<style type="text/css">
.thumbnail:hover {border-color:#0088CC}
.thumbnail .caption{
	padding: 0;
	color: #666;
	font-size: 12px;
	margin: 8px 4px 2px;
	overflow: hidden;
}
</style>
<div class="row">
	<div class="col-sm-12 col-md-12">
		<h3 class="heading">
			今日上传
			<small>
				<a href="javascript:void(0);">
					<i class="icon-calendar"></i>
					选择日期
				</a>
			</small>
			/
			<small>
				<a href="javascript:void(0);">
					<i class="icon-time"></i>
					选择时段
				</a>
			</small>
			/
			<small>
				<a href="javascript:void(0);">
					<i class="icon-tasks"></i>
					任务进展
				</a>
			</small>
		</h3>
		<div class="row">
			<% @images.each do |image| %>
			<div class="col-md-2">
				<div class="thumbnail">
					<%= link_to image_tag(image.picture(:cover)), image.picture(:big) %>
					<div class="caption">
						<a href="javascript:void(0)" title="删除"> 
							<i class="icon-trash"></i>
						</a>
						<a href="javascript:void(0)" title="编辑">
							<i class="icon-pencil"></i>
						</a>
						<%= link_to image.user.username, 'javascript:void(0);' %>
					</div>
				</div>
			</div>
			<% end %>
		</div>

	</div>
</div>