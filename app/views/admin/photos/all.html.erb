<div class="w-box">
    <div class="w-box-header">
        <div class="pull-right sort-disabled">
            <div class="pull-right sort-disabled">
                <%= link_to '缩略图浏览', admin_photos_path %>
            </div>
        </div>
    </div>
    <div class="w-box-content">
        <table class="table table-striped table12 table-condensed table-hover text-center">
            <tr>
                <th>图片</th>
                <th>活动</th>
                <th>作品</th>
                <th>相册</th>
                <th>用户</th>
                <th>时间</th>
                <th>操作</th>
            </tr>
        <% @photos.each do |photo| %>
            <tr>
                <td><%= image_tag photo.picture(:cover), style: 'max-width: 80px;' %></td>
                <td><%= photo.event ? photo.event.name : '未参加' %></td>
                <td><%= photo.work ? photo.work.title : '未参加' %></td>
                <td><%= photo.album ? photo.album.name : '未发布' %></td>
                <td><%= photo.user.username %></td>
                <td><%= time_style photo.created_at %></td>
                <td>
                    <%= link_to '详细', admin_photo_path(photo), class: 'btn btn-info btn-xs' %>
                    <%= link_to '删除', admin_photo_path(photo), method: :delete, data: {confirm: '确定删除？不可恢复操作!' }, class: 'btn btn-danger btn-xs' %>
                </td>
            </tr>
        <% end %>
        </table>
    </div>
    <%= will_paginate @photos %>
</div>