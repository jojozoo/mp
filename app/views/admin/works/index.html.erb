<div class="w-box">
	<div class="w-box-header">
		<div class="pull-right sort-disabled">
			<%= link_to '新建work', new_admin_work_path %>
		</div>
	</div>
	<div class="w-box-content">
		<table class="table table-striped table12 table-condensed table-hover text-center">
			<tr>
				<th>投放资源</th>
				<th>跳转地址</th>
				<th>标题</th>
				<th>描述</th>
				<th>类型</th>
				<th>显示</th>
				<th>投放</th>
				<th>操作</th>
			</tr>
		<% @works.each do |work| %>
			<tr>
				<td><%= image_tag work.photo.url, style: 'max-width: 80px;' %></td>
				<td><%= link_to work.target, work.target, target: '_blank' %></td>
				<td><%= truncate(work.title, length: 10) %></td>
				<td><%= truncate(work.desc, length: 10) %></td>
				<td><%= Ad::ADTYPE[work.t] || '其他' %></td>
				<td><%= Ad::ADSHOW[work.s] || '其他' %></td>
				<td><%= work.putins.count %>个</td>
				<td>
					<%= link_to '详细/投放', admin_work_path(work), class: 'btn btn-info btn-xs' %>
					<%= link_to '编辑', edit_admin_work_path(work), class: 'btn btn-info btn-xs' %>
					<%= link_to '删除', admin_work_path(work), method: :delete, data: {confirm: '确定删除？不可恢复操作!' }, class: 'btn btn-danger btn-xs' %>
				</td>
			</tr>
		<% end %>
		</table>
	</div>
	<%= will_paginate @works %>
</div>