<div class="col-sm-12 col-md-12">
	<h3 class="heading">网站基本信息</h3>
	<form action="/admin/info" class="simple_form form-horizontal" data-validate="true" id="site_basic" method="post">
		<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
		<% info = {
			name:  '名称',
			title:  '标题',
			key_words:  '关键字',
			description:  '描述',
			server_name: '服务名称',
			admin_mail:  '通知邮件',
			user_mail:  '发送邮件',
		} %>

		<% info.each do |key, val| %>
		<div class="form-group string optional info_<%= key %>">
			<label class="file required col-sm-2 control-label" for="info_<%= key %>">
				网站<%= val %>
			</label>
			<div class="col-sm-6 input-text-add">
				<input class="string required form-control" id="info_<%= key %>" name="info[<%= key %>]" type="text" data-validate="true" value="<%= @info[key] %>">
			</div>
		</div>
		<% end %>
		<div class="form-group">
			<div class="col-sm-8 col-sm-offset-2">
				<input type="submit" value="保存" class="btn btn-default"></div>
		</div>
	</form>
