<div class="w-box">
	<div class="w-box-header">
		<div class="pull-right sort-disabled">
			<%= link_to '新建tag', new_admin_tag_path %>
		</div>
	</div>
	<div class="w-box-content">
		<table class="table table-striped table12 table-condensed table-hover text-center">
			<tr>
				<th>ID</th>
				<th>名字</th>
				<th>类型</th>
				<th>使用数量</th>
				<th>操作</th>
			</tr>
		<% @tags.each do |tag| %>
			<tr>
				<td><%= tag.id %></td>
				<td><%= tag.name %></td>
				<td><%= tag.channel %></td>
				<td><%= tag.sum %></td>
				<td>
					<%= link_to '详细', admin_tag_path(tag), class: 'btn btn-info btn-xs' %>
					<%= link_to '删除', admin_tag_path(tag), method: :delete, data: {confirm: '确定删除？不可恢复操作!' }, class: 'btn btn-danger btn-xs' %>
				</td>
			</tr>
		<% end %>
		</table>
	</div>
	<%= will_paginate @tags %>
</div>