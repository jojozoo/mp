								<li>
									<%= link_to '推荐作品', admin_pushes_path(t: 'Work') %>
								</li>
								<li>
									<%= link_to '推荐图片', admin_pushes_path(t: 'Image') %>
								</li>
								<li>
									<%= link_to '推荐话题', admin_pushes_path(t: 'Topic') %>
								</li>
								<li>
									<%= link_to '推荐活动', admin_pushes_path(t: 'Event') %>
								</li>
								<li>
									<%= link_to '推荐重点', admin_pushes_path(t: 'Zhong') %>
								</li>
							</ul>
						</div>
					</div>
				</div>

				<div class="panel panel-default">
					<div class="panel-heading">
						<a href="#collapseAdmin" data-parent="#side_accordion" data-toggle="collapse" class="accordion-toggle">
							<i class="icon-cog"></i>
							网站设置
						</a>
					</div>
					<div class="accordion-body collapse <%= 'in' if ['feedbacks', 'ads', 'banners', 'bgs', 'sends', 'sessions'].member?(controller_name) %>" id="collapseAdmin">
						<div class="panel-body">
							<ul class="nav nav-pills nav-stacked">
								<li>
									<%= link_to '反馈信息', admin_feedbacks_path, class: 'accordion-toggle' %>
