									<%= link_to '通知列表', admin_sends_path %>
								</li>
								<li>
									<%= link_to '群发站内信', '/admin/msg' %>
								</li>
								<li>
									<%= link_to '邮件相关', admin_resque_server_path %>
								</li>
								<li class="nav-header">系统设置</li>
								<li>
									<%= link_to '网站信息', '/admin/info' %>
								</li>
								<li>
									<%= link_to '网站日志', '/admin/log' %>
								</li>
								<li>
									<%= link_to '基础数据', '/admin/basic' %>
								</li>
							</ul>
						</div>
					</div>
				</div>
