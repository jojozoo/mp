<div class="modal fade" id="myTasks">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				<h3 class="modal-title">今日任务</h3>
			</div>
			<div class="modal-body">
				<div class="alert alert-info">
					每天必要的任务.
				</div>
				<table class="table table-condensed table-striped" data-provides="rowlink">
					<tr>
						<th>id</th>
						<th>Summary</th>
						<th>Updated</th>
						<th>Priority</th>
						<th>Status</th>
					</tr>
					<% ['danger', 'warning', 'success', 'warning'].each do |r| %>
					<tr>
						<td><%= r %></td>
						<td>
							<a href="javascript:void(0)">sorry i don't know</a>
						</td>
						<td>23/05/2012</td>
						<td>
							<span class="label label-<%= r %>"><%= r %></span>
						</td>
						<td>Open</td>
					</tr>
					<% end %>
				</table>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default">Go to task manager</button>
			</div>
		</div>
	</div>
</div>