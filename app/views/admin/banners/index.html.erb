<div class="w-box">
	<div class="w-box-header">
		<div class="pull-right sort-disabled">
			<%= link_to '新建banner', new_admin_banner_path %>
		</div>
	</div>
	<div class="w-box-content">
		<table class="table table-striped table12 table-condensed table-hover text-center">
			<tr>
				<th>图片</th>
				<th>链接</th>
				<th>标题</th>
				<th>描述</th>
				<th>状态</th>
				<th>时间</th>
				<th>操作</th>
			</tr>
		<% @banners.each do |banner| %>
			<tr>
				<td><%= image_tag banner.photo.url, style: 'max-width: 80px;' %></td>
				<td><%= link_to banner.link, banner.link, target: '_blank' %></td>
				<td><%= truncate(banner.title, length: 10) %></td>
				<td><%= truncate(banner.desc, length: 10) %></td>
				<td><%= banner.del ? '已删除' : '正常' %></td>
				<td><%= banner.created_at.to_date %></td>
				<td>
					<%= link_to '详细/回应', admin_banner_path(banner), class: 'btn btn-info btn-xs' %>
					<%= link_to '删除', admin_banner_path(banner), method: :delete, data: {confirm: '确定删除？不可恢复操作!' }, class: 'btn btn-danger btn-xs' %>
				</td>
			</tr>
		<% end %>
		</table>
	</div>
	<%= will_paginate @banners %>
</div>