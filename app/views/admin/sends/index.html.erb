<div class="w-box">
	<div class="w-box-header">
		<div class="pull-right sort-disabled">
			<%= link_to '发送通知', new_admin_send_path %>
		</div>
	</div>
	<div class="w-box-content">
		<table class="table table-striped table12 table-condensed table-hover text-center">
			<tr>
				<th>通知标题</th>
				<th>通知内容</th>
				<th>通知类型</th>
				<th>操作</th>
			</tr>
		<% @sends.each do |send| %>
			<tr>
				<td><%= truncate(send.title, length: 10) %></td>
				<td><%= truncate(send.content, length: 10) %></td>
				<td><%= send.channel %></td>
				<td>
					<%= link_to '详细', admin_send_path(send), class: 'btn btn-info btn-xs' %>
					<%= link_to '删除', admin_send_path(send), method: :delete, data: {confirm: '确定删除？不可恢复操作!' }, class: 'btn btn-danger btn-xs' %>
				</td>
			</tr>
		<% end %>
		</table>
	</div>
	<%= will_paginate @sends %>
</div>